<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Eu_PersonalAbout"
    android:background="@color/blue_medium">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">

        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SafeStep - Sobre Mim"
            android:textSize="30dp"
            android:padding="20dp"
            android:textColor="@color/blue_light"
            android:background="@color/blue_medium"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp">

            <!-- LinearLayout interno com orientação vertical -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="5dp">

                <TextView
                    android:text="Olá,"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue_medium"
                    android:textSize="20dp"/>

                <TextView
                    android:id="@+id/eu_nomeEU"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Meu nome é: "
                    android:textColor="@color/blue_medium"
                    android:textSize="20dp"/>

                <TextView
                    android:id="@+id/eu_idadeEU"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tenho: "
                    android:textColor="@color/blue_medium"
                    android:textSize="20dp"/>

                <TextView
                    android:id="@+id/eu_moradaEU"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Minha Morada: "
                    android:textColor="@color/blue_medium"
                    android:textSize="20dp"/>


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:padding="15dp"
                android:text="Sobre mim:"
                android:textColor="@color/blue_medium"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/eu_aboutme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/blue_medium"
                android:textSize="25dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom|center"
            android:orientation="vertical"
            >

            <Button
                android:id="@+id/eu_editarinf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/roundend_button"
                android:text="Editar Minhas informações"
                android:textColor="@color/blue_light"
                android:textSize="20dp" />

            <Button
                android:id="@+id/eu_voltar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/roundend_button"
                android:text="Voltar ao inicio"
                android:textAllCaps="false"
                android:textColor="@color/blue_light"
                android:textSize="20dp" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>
