<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SafeStep - Localizações Guardadas"
        android:textSize="30dp"
        android:padding="20dp"
        android:textColor="@color/blue_light"
        android:background="@color/blue_medium"/>

    <TextView
        android:id="@+id/alert_localizacaoguardas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:padding="10dp"
        android:textColor="@color/blue_medium"
        />

    <!-- ListView para exibir as localizações -->
    <ListView
        android:id="@+id/listViewLocations"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textAlignment="center"
        android:layout_weight="1"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"/>


    <!-- Botão para limpar todas as localizações -->
    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/btnClearAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Limpar todas as localizações"
        android:layout_gravity="center"
        android:background="@drawable/roundend_button"
        android:textColor="@color/blue_light"
        android:textSize="20dp"
        android:padding="8dp"/>

    <Button
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:id="@+id/al_voltar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/roundend_button"
        android:text="Voltar ao inicio"
        android:textAllCaps="false"
        android:textColor="@color/blue_light"
        android:textSize="20dp" />
</LinearLayout>
