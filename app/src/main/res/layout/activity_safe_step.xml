<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".settings"
    android:orientation="vertical">

    <TextView
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SafeStep"
        android:textSize="30dp"
        android:padding="20dp"
        android:textColor="@color/blue_light"
        android:background="@color/blue_medium"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="safestep@fakemail.com"
        android:textSize="15dp"
        android:padding="20dp"
        android:textColor="@color/blue_light"
        android:background="@color/blue_medium"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="safestep.pt"
        android:textSize="15dp"
        android:padding="20dp"
        android:textColor="@color/blue_light"
        android:background="@color/blue_medium"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/blue_medium"

            android:textSize="20dp"
            android:textAlignment="center"
            android:text="SafeStep - Este projeto foi pensado para ajudar as pessoas com dificuldades visuais a andar livremente pelo mundo!"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|center"
        android:orientation="vertical"
        android:layout_marginBottom="25dp"
        >

        <Button
            android:id="@+id/s_voltar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/roundend_button"
            android:text="Voltar ao inicio"
            android:textAllCaps="false"
            android:textColor="@color/blue_light"
            android:textSize="20dp" />

    </LinearLayout>


</LinearLayout>