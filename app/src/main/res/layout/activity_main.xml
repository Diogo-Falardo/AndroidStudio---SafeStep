<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="start">

    <!-- Área principal com a barra superior -->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/menu_button"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="25dp"
            android:layout_gravity="end|top"
            android:background="@drawable/overflow_menu_vertical_svgrepo_com"
            android:onClick="showMenu" />

        <!-- Barra superior (Material Toolbar) -->
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blue_royal"
                app:title="SafeStep"
                app:titleTextColor="@color/white"
                app:navigationIcon="@drawable/baseline_menu_24_white"
                app:navigationIconTint="@color/white" />

        </com.google.android.material.appbar.AppBarLayout>


        <!-- Conteúdo principal abaixo da barra -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <!-- Mapa principal -->
            <org.osmdroid.views.MapView
                android:id="@+id/map"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!-- Seção de input e botão -->
            <LinearLayout
                android:id="@+id/input_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <EditText
                    android:id="@+id/text_input"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/blue_royal"
                    android:gravity="center"
                    android:textColorHint="@color/white"
                    android:hint="Input"
                    android:textColor="@color/blue_light" />

                <Button
                    android:id="@+id/send_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/blue_royal"
                    android:text="Procurar"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/navbar"
        android:layout_gravity="start"
        app:headerLayout="@layout/header"
        app:menu="@menu/menu"/>

</androidx.drawerlayout.widget.DrawerLayout>
