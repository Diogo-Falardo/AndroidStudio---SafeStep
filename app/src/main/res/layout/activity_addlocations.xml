<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addlocations"
    android:orientation="vertical">


    <TextView
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SafeStep - Localizações"
        android:textSize="30dp"
        android:padding="20dp"
        android:textColor="@color/blue_light"
        android:background="@color/blue_medium"/>


    <LinearLayout
        android:layout_marginTop="225dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/al_coordenadas"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="Coordenadas"
            android:textColorHint="@color/blue_medium"/>

        <EditText
            android:id="@+id/al_nome"
            android:layout_marginTop="15dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="Nome - Localização"
            android:textColorHint="@color/blue_medium"/>

        <Button
            android:id="@+id/al_guardar"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonloginregister"
            android:text="Guardar"
            android:textColor="@color/white"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|center"
        android:orientation="vertical"
        android:layout_marginBottom="25dp"
        >

        <Button
            android:id="@+id/al_locsalavas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/roundend_button"
            android:text="Ver Localizações Salvas "
            android:textColor="@color/blue_light"
            android:textSize="20dp" />

        <Button
            android:id="@+id/al_voltar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/roundend_button"
            android:text="Voltar ao inicio"
            android:textAllCaps="false"
            android:textColor="@color/blue_light"
            android:textSize="20dp" />

    </LinearLayout>


</LinearLayout>